@model Writer


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="WriterId" />
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WriterName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WriterName" class="form-control" />
                    <span asp-validation-for="WriterName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WriterSurname"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WriterSurname" class="form-control" />
                    <span asp-validation-for="WriterSurname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Birthday"></label>
                </div>
                <div class="col-8">
                    @if (Model.WriterId != 0)
                    {
                        <input asp-for="Birthday" class="form-control" placeholder="mm/dd/yyyy" id="datepicker_bd" type="text" />
                    }
                    else
                    {
                        <input asp-for="Birthday" class="form-control" placeholder="mm/dd/yyyy" id="datepicker_bd" type="text" />
                    }
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Location"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.WriterId != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
<script>
    $(function(){
        $("#datepicker_bd").datepicker({

        });
    })
</script>
}