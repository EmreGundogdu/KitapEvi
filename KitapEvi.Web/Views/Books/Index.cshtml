@model IEnumerable<Book>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2>List of Books</h2>
        </div>
        <div class="col-2">
            <a asp-action="ABD" class="btn-warning btn form-control">ABC</a>
        </div>
        <div class="col-2">
            <a asp-action="UpdateInsert" class="btn-primary btn form-control">Create</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table-striped table border">
                <tr class="table-secondary">
                    <th>Book Name</th>
                    <th>Price</th>
                    <th>Publisher Name</th>
                    @*    <th>Writer Of Book</th>
                        <th></th>*@
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookName</td>
                        <td>@item.Price</td>
                        <td>@item.Publisher.PublisherName</td>
                        @*    <td>
                            @{
                            var writers = "";
                            }
                            @foreach (var writer in item.BookWriters)
                            {
                            writers += writer.Writer.NameSurname + ",";
                            }
                            @writers.Trim().TrimEnd(',')
                            </td>*@
                        <td>
                            <a class="btn-primary btn text-white" asp-action="UpdateInsert" asp-route-id="@item.BookId">Edit</a>
                            <a class="btn-info btn text-white" asp-action="Details" asp-route-id="@item.BookId">Details</a>
                            <a class="btn-danger btn text-white" asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                            <a class="btn-secondary btn text-white" asp-action="ManageWriter" asp-route-id="@item.BookId">Writers</a>
                        </td>
                    </tr>

                }
            </table>
        }
        else
        {
            <p>No records found...</p>
        }
    </div>
</div>