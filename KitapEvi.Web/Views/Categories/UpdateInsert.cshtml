@model Category
<form method="post" asp-action="UpdateInser">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="from-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for=CategoryName class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.CategoryId != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update Category</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create Category</button>

                    }
                </div>
                <div class="col-4">
                    <a asp-action="Index" asp-controller="Categories" class="btn btn-success form-control">Back To list</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}