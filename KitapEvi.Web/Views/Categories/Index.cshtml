@model IEnumerable<Category>

<br />
<br>
<div class="border p-4 bg-white">
    <div class="row">
        <div class=col-9>
            <h2 class="text-info">Category list</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-action="UpdateInsert" class="btn btn-info form-control">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-right">
            <a asp-action="AddMany3" class="btn btn-success form-control">Add Many 3</a>
        </div>

        <div class="col-3 text-right">
            <a asp-action="AddMany10" class="btn btn-success form-control">New Add Many 10</a>
        </div>

        <div class="col-3 text-right">
            <a asp-action="DeleteMany3" class="btn btn-danger form-control">Delete Many 3</a>
        </div>


        <div class="col-3 text-right">
            <a asp-action="DeleteMany10" class="btn btn-danger form-control">New Deleted Many 10</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>Category Name</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td><a class="btn btn-primary text-white" asp-action="UpdateInsert" asp-route-id="@item.CategoryId">Edit</a></td>
                        <td><a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a></td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>There are any categories...</p>
        }
    </div>
</div>
